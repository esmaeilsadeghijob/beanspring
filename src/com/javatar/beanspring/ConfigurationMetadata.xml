<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="person"
          class="com.javatar.beanspring.Person"
          init-method="createdTable"
          destroy-method="connectionClose">
        <property name="id" value="1"/>
        <property name="name" value="Sam"/>
    </bean>

    <bean id="accountService" class="com.javatar.beanspring.AccountService"></bean>

    <bean id="userService" class="com.javatar.beanspring.UserService">
        <property name="accountService" ref="accountService"/>
    </bean>

</beans>